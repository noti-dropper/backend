from konlpy.tag import Kkma
from konlpy.utils import pprint
import json

#문장을 인자로 받으면 그 문장 속 명사만 뱉어내는 함수입니다
def findNouns(sentence):

    #꼬꼬마 객체 생성
    kkma = Kkma()
    
    #api 함수를 사용해 명사를 추출합니다
    nouns_list = kkma.nouns(sentence)
    print(nouns_list)
    
    #list 자료구조를 json 형식으로 변환합니다.
    nouns_json = json.dumps(nouns_list)
    
    return nouns_json

findNouns("오늘 밤 치킨 행사를 합니다.")
